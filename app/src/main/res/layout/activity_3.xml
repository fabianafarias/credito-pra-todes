<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity3">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:id="@+id/ll_simulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/tv_title_activity_simulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:text="@string/simulation_text_title" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/valor_emprestimo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/et_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="90000"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/pink_500"
            android:inputType="numberDecimal"
            android:maxLength="12"
            app:keep_hint="true"
            android:background="@drawable/background"
            app:mask="R$ #.###" />

        <TextView
            android:id="@+id/tv_renda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/renda_mensal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/et_renda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="100000"
            android:inputType="numberDecimal"
            android:maxLength="12"
            app:keep_hint="true"
            android:background="@drawable/background"

            app:mask="R$ #.###,##" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_completo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="@string/nome_completo"
            android:inputType="text"
            android:background="@drawable/background"
            android:maxLength="35"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_de_nascimento"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:hint="23011985"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/et_birth_date"
            android:inputType="date"
            android:background="@drawable/background"
            app:mask="##/##/####"/>

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telefone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="27999988888"
            android:inputType="phone"
            app:keep_hint="true"
            android:background="@drawable/background"
            app:mask="+55 ## #####-####" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="@string/insira_seu_email"
            android:background="@drawable/background"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            />

        <Button
                android:id="@+id/btn_simulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:text="Simular emprÃ©stimo"
                android:backgroundTint="@color/blue_200" />


    </LinearLayout>


</RelativeLayout>