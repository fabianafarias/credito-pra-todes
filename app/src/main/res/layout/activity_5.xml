<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".Activity5">

   <ImageView
       android:id="@+id/iv_hourglass"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="56dp"
       android:paddingTop="80dp"
       android:src="@drawable/ic_hourglass_top_black_24dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.497"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/tv_final_message"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:lineHeight="30dp"
       android:paddingLeft="30dp"
       android:paddingRight="30dp"
       android:text="@string/final_message"
       android:textColor="@color/black"
       android:textSize="22sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/iv_hourglass"
       app:layout_constraintVertical_bias="0.19" />


</androidx.constraintlayout.widget.ConstraintLayout>